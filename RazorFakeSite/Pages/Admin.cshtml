@page
@model RazorFakeSite.Pages.AdminModel
@{
    ViewData["Title"] = "Admin page";
}

<div class="container">
    <div class="row justify-content-md-center mb-4">
        <div class="mb-4">
            <h2>Restrict area, admins only!</h2>
            <img src="/img/Restricted-Area.png" class="img-thumbnail" alt="...">
            <h3>You are login as: @Model.Username</h3>
        </div>
    </div>
    <div class="row justify-content-md-center mb-4">
        <form method="post" asp-page="Admin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginModel.Username" class="control-label"></label>
                <input asp-for="LoginModel.Username" class="form-control" />
                <span asp-validation-for="LoginModel.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginModel.Password" class="control-label"></label>
                <input type="LoginModel.Password" asp-for="LoginModel.Password" class="form-control" />
                <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
            </div>
            <input type="submit" value="Set login/password" />
        </form>
    </div>
    <div class="row justify-content-md-center mb-4">
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
            <div>
                @Model.Result
            </div>
        </div>
    </div>
    <row>
        <div>
            <a asp-page="Admin" asp-page-handler="Logout">Logout</a>
        </div>
    </row>
</div>